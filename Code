function start(){
  if(tela === 'start'){
  image(space, space1X, space1Y, width, height);
  image(space, space2X, space2Y, width, height);
  push();
    fill('white');
    tempo = round(millis()/1000 - tempoOff, 1);
    text("TIME: " +tempo, 300, 30);
  pop();
  space1Y += 8
  space2Y += 8
  
  if(space1Y>400){
    space1Y = -400
    
  }
  if(space2Y>400){
    space2Y = -400
  }
  }
  
  image(nave, navex, navey, 30, 30);
  movernave();
  
  desenharalien();
  moveralien();
  
  // Atualizar tiros
  for (let i = 0; i < shotx.length; i++) {
    push();
    fill("rgb(0,255,0)");
    circle(shotx[i], shoty[i], 7);
    shoty[i] -= 7; // Ajusta a velocidade do tiro
    if (shoty[i] < 0) {
      shotx.splice(i, 1); // Remove o tiro da posiÃ§Ã£o i
      shoty.splice(i, 1);
      i--; // Ajusta o Ã­ndice apÃ³s a remoÃ§Ã£o
    pop();
    }
  }
  
  // Verificar colisÃ£o entre tiros e alienÃ­genas
  for (let i = 0; i < shotx.length; i++) {
    for (let j = 0; j < aliens.length; j++) { 
      if (aliens[j].vivo && collidewhith(shotx[i], shoty[i], aliens[j])) { 
        aliens[j].y = -20; // Move o alienÃ­gena para fora da tela
        aliens[j].x = random(0, 400); // Move o alienÃ­gena para uma nova posiÃ§Ã£o
        shotx.splice(i, 1); // Remove o tiro da posiÃ§Ã£o i
        shoty.splice(i, 1);
        i--; // Ajusta o Ã­ndice apÃ³s a remoÃ§Ã£o
         tiro.play();
        break; // Para evitar verificar o mesmo tiro com outros alienÃ­genas
       
      }
    }
  }
  
  // Verificar colisÃ£o entre alienÃ­genas e a nave
  for (let i = 0; i < aliens.length; i++) {
    if (aliens[i].vivo && collidewhithship(navex, navey, aliens[i])) {
      placar();
      tela = "gameover"; // TransiÃ§Ã£o para a tela inicial ou fim de jogo
      scores.push(tempo+" Segundos");
      aliens[0].y = -50; aliens[0].x = 25
      aliens[1].y = -50; aliens[1].x = 185
      aliens[2].y = -50; aliens[2].x = 255
      aliens[3].y = -50; aliens[3].x = 350
      aliens[4].y = -50; aliens[4].x = 95
      aliens[5].y = -50; aliens[5].x = 305
      navex = 200
      shoty = [];
      shotx = [];
      
      break; // Para evitar mÃºltiplas transiÃ§Ãµes de tela
    }
  }
}
function gameover(){
  if(tela === 'gameover'){ 
  image(space, space1X, space1Y, width, height, 0, 0, space.width, space.height);
  image(space, space2X, space2Y, width, height, 0, 0, space.width, space.height);
  space1Y += 8
  space2Y += 8
  
  if(space1Y>400){
    space1Y = -400
  }
  if(space2Y>400){
    space2Y = -400
  }
} 
  teme.stop();
  effect.loop();
  push();
  textAlign(CENTER)
  textSize(50)
  textFont('Helvetica')
  text('GAME OVER', 200, 110)
  textSize(15)
  text('(clique em qualquer lugar para voltar a tela inicial)', 200, 140)
  pop();
  push();
  fill('white')
  rect(140,170,120,40)
  rect(140,220,120,40)
  rect(140,270,120,40)
  pop();
 push();
  fill('black')
  rect(145,175,110,30)
  rect(145,225,110,30)
  rect(145,275,110,30)
  
   textSize(20)
   fill('white')
  text('1st ' + st1, 200, 197)
  text('2th '+ th2, 200, 247)
  text('3th '+ th3, 200, 297)
  pop(); 
 
  
  
}
