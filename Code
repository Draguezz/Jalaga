function movernave() {
  if (keyIsDown(RIGHT_ARROW)) {
    navex += 4;
    if (navex > width) {
      navex = 0;
    }
  }
  if (keyIsDown(LEFT_ARROW)) {
    navex -= 4;
    if (navex < 0) {
      navex = width;
    }
  }
}

function keyPressed() {
  if (key === " ") {
    shotx.push(navex + 15); // O tiro nasce na posiÃ§Ã£o da nave
    shoty.push(navey);
    shot = true; // Marca que um tiro foi disparado
  }
}

function desenharalien() {
  for (let i = 0; i < aliens.length; i++) { 
    if (aliens[i].vivo) { // Desenha apenas alienÃ­genas vivos
      image(imagemalien[aliens[i].id], aliens[i].x, aliens[i].y, 30, 30);
    }
  }
}

function moveralien() {
  for (let i = 0; i < aliens.length; i++) {
    if (aliens[i].vivo) { // Move apenas alienÃ­genas vivos
      if (aliens[i].y <= height) {
        aliens[i].y += aliens[i].velocidade;
       if(i%2==0){
        aliens[i].x += 3;
       }
      } else {
        aliens[i].y = -30;
        aliens[i].x += random(0, 400);
      }
      if (aliens[i].x > width) {
        aliens[i].x = 0;
      }
    }
  }
}

function collidewhith(projX, projY, alien) {
  let alienX1 = alien.x;
  let alienX2 = alien.x + 30;
  let alienY1 = alien.y;
  let alienY2 = alien.y + 30;
  let projX1 = projX - 7; // O raio do tiro Ã© 7
  let projX2 = projX + 7;
  let projY1 = projY - 7;
  let projY2 = projY + 7;

  return projX2 > alienX1 && projX1 < alienX2 && projY2 > alienY1 && projY1 < alienY2;
}

function collidewhithship(navex, navey, alien) {
  let alienX1 = alien.x;
  let alienX2 = alien.x;
  let alienY1 = alien.y ;
  let alienY2 = alien.y;
  let navex1 = navex - 30; // O raio do tiro Ã© 7
  let navex2 = navex + 30;
  let navey1 = navey - 30;
  let navey2 = navey + 30;

  return navex2 > alienX1 && navex1 < alienX2 && navey2 > alienY1 && navey1 < alienY2;
}

function placar(){
  if(tempo>st1){
    th2 = st1
    th3 = th2
    st1 = tempo
  }
  else if(tempo<st1 && tempo>th3 && tempo>th2){
    th3 = th2
    th2 = tempo
  }
  else if(tempo<st1 && tempo<th2 && tempo>th3){
    th3 = tempo
  }
}

